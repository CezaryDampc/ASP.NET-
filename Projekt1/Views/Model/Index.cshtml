@model IEnumerable<Projekt1.Models.Model>

@{
    ViewBag.Title = "Modele samochodów";
}

<h2>Index</h2>

<p>
    <input type="submit" onclick="location.href='@Url.Action("Index","Model/Create")'" value="Utwórz" />
    <input type="submit" onclick="location.href='@Url.Action("Index","Brand/Index")'" value="Powrót do strony głównej" />
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Course)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Course)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
